@model StudentManagement.DTOs.Auth.RegisterRequestDto
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="max-width: 450px; width: 100%; border-radius: 10px;">
        <h2 class="text-center mb-4" style="color: #2c3e50;">Register</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold"></label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-semibold"></label>
                <select asp-for="Role" class="form-select form-select-lg">
                    <option value="Student">Student</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100 fw-bold">Register</button>
        </form>

        <p class="text-center mt-3">
            Already have an account? <a asp-action="Login">Login here</a>.
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        background-color: #ffffff;
    }

    .btn-primary {
        background-color: #2980b9;
        border-color: #2980b9;
        transition: background 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #1f618d;
            border-color: #1f618d;
        }

    label {
        font-size: 0.9rem;
    }

    input::placeholder {
        color: #a0a0a0;
    }
</style>
