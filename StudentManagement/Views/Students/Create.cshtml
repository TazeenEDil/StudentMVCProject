@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />

<style>
    /* Basic form container */
    .form-container {
        max-width: 400px;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    /* Form group spacing */
    .form-group {
        margin-bottom: 15px;
    }

    /* Labels */
    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    /* Inputs */
    input[type="text"],
    input[type="email"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Validation message */
    .text-danger {
        color: red;
        font-size: 0.9em;
    }

    /* Submit button */
    .submit-btn {
        padding: 10px 15px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 4px;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #0056b3;
        }

    /* Back link */
    .back-link {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        color: #007bff;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegistrationNumber"></label>
            <input asp-for="RegistrationNumber" />
            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Department"></label>
            <input asp-for="Department" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="submit-btn" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="back-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
